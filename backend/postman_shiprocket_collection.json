{
  "info": {
    "name": "Shiprocket API",
    "description": "API endpoints for Shiprocket shipping integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Track Shipment",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/shiprocket/track/:orderId?orderType=regular",
              "host": ["{{baseUrl}}"],
              "path": ["api", "shiprocket", "track", ":orderId"],
              "query": [
                {
                  "key": "orderType",
                  "value": "regular",
                  "description": "regular or custom"
                }
              ],
              "variable": [
                {
                  "key": "orderId",
                  "value": "64abc123..."
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Check Serviceability",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/shiprocket/check-serviceability?pickupPincode=400001&deliveryPincode=110001&weight=0.5&cod=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "shiprocket", "check-serviceability"],
              "query": [
                {
                  "key": "pickupPincode",
                  "value": "400001"
                },
                {
                  "key": "deliveryPincode",
                  "value": "110001"
                },
                {
                  "key": "weight",
                  "value": "0.5"
                },
                {
                  "key": "cod",
                  "value": "0"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
