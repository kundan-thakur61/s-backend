            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"64abc123...\",\n  \"orderType\": \"regular\",\n  \"pickupLocation\": \"Primary\",\n  \"dimensions\": {\n    \"length\": 15,\n    \"breadth\": 10,\n    \"height\": 2\n  },\n  \"weight\": 0.15\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/shiprocket/create-shipment",
              "host": ["{{baseUrl}}"],
